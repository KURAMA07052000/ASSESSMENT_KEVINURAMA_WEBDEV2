<html>

<head>
  {{>header}}
  <title>{{title}}</title>
</head>

<body>
  {{>navbaradmin}}
 
<h2>Create a new Meal</h2>
<div class="text-right" style="margin-bottom: 1em; margin-top: 5%;">


</div>
<form method="post" role="form" action="/new">
<div class="form-group">
<label for="meal">Meal Name</label>
<input type="text" class="form-control" id="meal"
name="meal" placeholder="Enter new Meal"
required>
</div>
<div class="form-group">
<label for="Ingredients">Ingredients</label>
<input type="text" class="form-control" id="Ingredients"
name="Ingredients" placeholder="Enter all the ingredients used"
required>
</div>
<div class="form-group">
<label for="description">Description</label>
<textarea class="form-control" id="description" name="description"
placeholder="Enter your comments here." rows="3"
required>
</textarea>
</div>
<div class="form-group">
<label for="price">Price</label>
<input type="text" class="form-control" id="price"
name="price" placeholder="Enter price of meal"
required>
</div>
<div class="form-group">
<input type="submit" value="Create new Meal" class="btn btn-primary" >
</div>
</form>

{{>footer}}
<script src="navbar.js"></script>
         
</body>

</html>