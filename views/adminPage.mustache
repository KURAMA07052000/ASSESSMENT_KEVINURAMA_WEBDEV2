          <div>
            <form action="/updateMeal" method="POST">


              <div class="form-group">
                <input type="text" id="_id" name="_id" value={{_id}} hidden>
              </div>
              <div class="form-group">
                <label for="meal">New Meal Name:</label>
                <input type="text" id={{meal}} name="meal" value="{{meal}}" placeholder="Enter new Meal" required>
              </div>
              <div class="form-group">
                <label for="Ingredients">New Ingredients:</label>
                <input type="text" id="Ingredients" name="Ingredients" value="{{Ingredients}}"
                  placeholder="Enter all the ingredients used" required>
              </div>
              <div class="form-group">
                <label for="description">New Description:</label>
                <input type="text" id="description" name="description" value="{{description}}"
                  placeholder="Enter your comments here." rows="3" required>
  
              </div>
              <div class="form-group">
                <label for="price">New Price</label>
                <input type="text" id="price" name="price" value="{{price}}" placeholder="Enter price of meal" required>
              </div>
              <br>
              <div class="form-group1">
                <label for="meals">Choose a new meal time:</label>
                
                <input type="meal_time" id="meal_time" name="meal_type" value="{{meal_time}}" placeholder="Choose new meal type" required>
                
              </div>
              <div class="buttonsforcards">

                <ul>
                  <li>
                    <div class="form-group1">

                      <button type="submit"  class="btnupdateMeal">Update </button>
                    </div>
                  </li>
                  <li>
                    <div class="form-group1">

                      <a href="/" class="btnCreateMeal">Delete</a>

                    </div>
                  </li>

                </ul>

              </div>


            </form> 
          </div>

        </div>
      </div>
